<h1 class="text-3xl p-7 text-center font-bold bg-red-500">{{msg}}</h1>

<h2 class="text-center font-bold text-xl mt-5">Your Products:</h2>
<div class="flex flex-col items-center justify-center mt-7">
    {{#each products}}
        <div class="flex flex-col my-5 text-xl font-bold">
            <p>{{this.id}} Name: <span class="bg-cyan-400 p-1 px-2 rounded shadow">{{this.title}}</span> Price: <span class="bg-cyan-400 p-1 px-2 rounded shadow">${{this.price}}</span> Photo: <img class="w-10 h-10" src={{this.url}} alt={{this.url}}></p>
        </div>
    {{/each}}
    <button onclick="location.href='http://localhost:8080/api/productos'" class="bg-red-400 p-3 px-10 mb-3 rounded shadow hover:bg-red-500">Insert another Product</button>
</div>