<%- include('./partials/head') %>

<h1 class="text-3xl p-7 text-center font-bold bg-red-500"><%= msg %> </h1> 
<h2 class="text-center font-bold text-xl mt-5">Your Products:</h2>
<% if (products.length > 0) { %>
    <div class="flex flex-col items-center justify-center mt-7">
    <% products.forEach(product => { %>
        <div class="flex flex-col my-5 text-xl font-bold">
            <div class="flex gap-10"><%= product.id %> ) Name: <span class="bg-cyan-400 p-1 px-2 rounded shadow"><%= product.title %> </span> Price: <span class="bg-cyan-400 p-1 px-2 rounded shadow"><%= product.price %> </span> Photo: <img class="w-10 h-10" src=<%= product.url %> alt=<%= product.url %> ></div>
        </div>
    <% }) %>
        <button onclick="location.href='http://localhost:8080/api/productos'" class="bg-red-400 p-3 px-10 my-4 rounded shadow hover:bg-red-500">Insert another Product</button>
    </div>
<% } else { %>
    <div class="pt-10">
        <p class="text-center text-2xl font-bold">There are no products here</p>
        <div class="flex w-full justify-center pt-5">
            <button onclick="location.href='http://localhost:8080/api/productos'" class="bg-red-400 p-3 px-10 my-4 rounded shadow hover:bg-red-500">Insert One</button>
        </div>
    </div>
<% } %>